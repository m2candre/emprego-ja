
<div class="panel panel-info">
  <div class="panel-heading">
    <h1>
      <%= link_to job.title, job %>
    </h1>
  </div>
</div>
<p>
  <dl class="dl-horizontal">
    <dt>Empresa:</dt>
    <dd>  <%= job.company.name %> </dd>

    <dt>Local:</dt>
    <dd><%= job.location %> </dd>

    <dt>Categoria:</dt>
    <dd><%= job.category.name %> </dd>

    <% if job.featured? %>
      <dt>Vaga em:</dt>
      <dd>  <strong>Destaque</strong> </dd>
    <% end %>

  </dl>
</p>
